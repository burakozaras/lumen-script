# INFOS
print('')
print('LIGHT-LUMEN CALCULATOR')
print('---------------')
print('read the instructions!')
print('EQUATIONS')
print('a=long edge of area')
print('b=short edge of area')
print('h=height of area')
print('cu=take correct value from external graphic (')
print('cm=take correct value from external graphic')
print('---------------')
# INPUTS
# input x
while True:
    x = input('enter -a- value:')
    try:
        x = int(x)
        break
    except ValueError:
        try:
            float(x)
            break
        except ValueError:
            print('this is not an number, enter valid value')
# input y
while True:
    y = input('enter -b- value:')
    try:
        y = int(y)
        break
    except ValueError:
        try:
            float(y)
            break
        except ValueError:
            print('this is not an number, enter valid value')
# input z
while True:
    z = input('enter -h- value:')
    try:
        z = int(z)
        break
    except ValueError:
        try:
            float(z)
            break
        except ValueError:
            print('this is not an number, enter valid value')
# in put t
while True:
    t = input('enter -cu- value:')
    try:
        t = int(t)
        break
    except ValueError:
        try:
            float(t)
            break
        except ValueError:
            print('this is not an number, enter valid value')
# input f
while True:
    f = input('enter -cm- value:')
    try:
        f = int(f)
        break
    except ValueError:
        try:
            float(f)
            break
        except ValueError:
            print('this is not an number, enter valid value')
# input p
while True:
    p = input('enter necessary -luxofarea- value:')
    try:
        p = int(p)
        break
    except ValueError:
        try:
            float(p)
            break
        except ValueError:
            print('this is not an number, enter valid value')
print('---------------')
# PROCESS
# K point
sum1 = float(x) * float(y) / ((float(x) + float(y)) * float(z))
# Ø point
sum2 = float(p) * float(x) * float(y) / (float(t) * float(f))
# RESULTS
print('K point:', sum1)
#
print('Ø point:', sum2, 'LUMEN')
print('---------------')
#
m = input('enter lumen value of lamps:')
print('---------------')
sum3 = float(sum2) / float(m)
print('Piece of Lamps:', sum3, '-->', round(sum3))
sum4 = round(sum3)
n = sum4
#
sum5 = float(n) * float(m) * float(t) * float(f) / (float(x) * float(y))
print('your area has'), print('-', sum5, '-'), print('exact lux value')
